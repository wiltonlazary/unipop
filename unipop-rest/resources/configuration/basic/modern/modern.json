{
  "class": "org.unipop.rest.RestSourceProvider",
  "baseUrl": "http://localhost:9200/",
  "add":{
    "url": "/{{resource}}/{{type}}/{{id}}",
    "template": "{ {{#prop}}\"{{key}}\":\"{{value}}\"{{^-last}}, {{/-last}}{{/prop}} }",
    "commit": {
      "url":"/{{resource}}/_refresh"
    },
    "bulk":{
      "url": "/_bulk",
      "template": "resources/bulk.mustache"
    }
  },
  "search":{
    "url": "{{resource}}/_search",
    "template": "resources/search.mustache"
  },
  "delete":{
    "url" : "{{resource}}/{{type}}/{{id}}"
  },
  "resultPath": "hits.hits",
  "opTranslator": {
    "eq": "term",
    "within": "terms"
  },
  "complexTranslator":[
    {"op": "gt", "template": "{ \"range\": { \"{{key}}\": { \"gt\": {{value}} } } }"}
  ],
  "vertices": [
    {
      "resource": "vertex",
      "id": "@_source.id",
      "label": "@_source.type",
      "properties": {
        "name": "@_source.name",
        "age": "@_source.age",
        "lang": "@_source.lang"
      },
      "dynamicProperties": false
    }
  ],
  "edges": [
    {
      "resource": "edge",
      "id": "@_source.id",
      "label": "@_source.type",
      "properties": {
        "weight": "@_source.weight"
      },
      "dynamicProperties": false,
      "outVertex":{
        "ref": true,
        "id": "@_source.outid",
        "label": "@_source.outlabel"
      },
      "inVertex":{
        "ref": true,
        "id": "@_source.inid",
        "label": "@_source.inlabel"
      }
    }
  ]
}